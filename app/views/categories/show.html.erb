<h2 align="center"><%= @category.name %> Articles</h2>

<div class="center">
  <% if logged_in? && current_user.admin? %>
    <div class="row">
      <span class="badge"><%= link_to "Edit Category", edit_category_path(@category) %></span>
    </div>
  <% end %>
  <%= will_paginate @category_articles %>
</div>

<%= render "articles/article", obj: @category_articles %>

<div class="center">
  <%= will_paginate @category_articles %>
</div>
