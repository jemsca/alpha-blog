<%= render "shared/errors", obj: @category %>

<%= form_for(@category, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :name %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Enter name', autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit(@category.new_record? ? "Add Category" : "Update Category", class: "btn btn-primary btn-lg") %>
    </div>
    <div class="col-sm-4">
      <%= link_to 'Back to Categories', categories_path %>
    </div>
  </div>
<% end %>
